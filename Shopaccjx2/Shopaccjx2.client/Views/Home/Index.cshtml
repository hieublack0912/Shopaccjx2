@{
    ViewBag.Title = "Trang Chủ";
}

<div class="wrapper">
    <header>
        <a href="/" class="page_header-logo" title="Trở về trang chủ">Trang chủ</a>
    </header>
    <div class="mid_test">
        
    </div>
</div>


<script>
    var logo = document.querySelector('.page_header-logo');
    function thaydoiwidth() {
        var x = window.innerWidth;
        if (x >= 720 && x <= 1000) {
            var lf = (310 - (1000 - x) / 2);
            console.log(`${lf}px`)
            logo.style.left = `${lf}px`;
            logo.style.display = "block";
        } else if (x < 720) {
            logo.style.display = "none";
        } else {
            logo.style.left = "310px";
        }
    }
    var y = window.innerWidth;
    if (y >= 720 && y <= 1000) {
        var lfm = (310 - (1000 - y) / 2);
        console.log(`${lfm}px`)
        logo.style.left = `${lfm}px`;
    } else if (y < 720) {
        logo.style.display = "none";
    } else {
        logo.style.left = "310px";
    }
    window.addEventListener("resize", thaydoiwidth);
</script>