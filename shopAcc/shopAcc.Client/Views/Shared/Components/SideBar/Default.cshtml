@model List<shopAcc.ViewModels.Catalog.Categories.CategoryVm>

<div class="list__sect">
    <div class="list__sect-title">
        <h4 class="list__sect-text">Môn phái</h4>
    </div>
    <div class="list__sect-item mt-4">
        <ul class="sect__show">
            @{
                var parents = Model.Where(x => x.ParentId == null);
            }
            @for (int index = 0; index < parents.Count(); index++)
            {
                var parent = parents.ElementAt(index);
                var children = Model.Where(x => x.ParentId == parent.Id);
                if (children.Any())
                {
                    <li class="list__sect-list__item pt-1 pb-1" id="mp-@parent.Id">
                        <a href="/categories/@parent.Id" class="d-flex">
                            <i class="fas fa-angle-double-right pt-1 text-dark"></i>
                            <h5 class="ml-2 text-dark">@parent.Name</h5>
                        </a>
                        <ul class="list__sect-list">
                            @foreach (var item in children)
                            {
                                <li class="active">
                                    <a href="/categories/@item.Id" class="text-secondary pl-3 d-flex">
                                        <h6 class="pl-2 text-secondary">@item.Name</h6>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                }
                else
                {
                    <li class="list__sect-list__item pt-1 pb-1" id="mp-@parent.Id">
                        <a href="/categories/@parent.Id" class="d-flex">
                            <i class="fas fa-angle-double-right pt-1 text-dark"></i>
                            <h5 class="ml-2 text-dark">@parent.Name</h5>
                        </a>
                    </li>
                }

            }
        </ul>
    </div>
</div>
<div class="list__sect mt-5" style="overflow:hidden">
    <div class="list__sect-title mb-2">
        <h4 class="list__sect-text">FaceBook</h4>
    </div>
