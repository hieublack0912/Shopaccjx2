@model List<shopAcc.ViewModels.Utilities.Slides.SlideVm>

<div id="slider" class="carousel slide mt-2" data-ride="carousel">

    @*Indicators*@
    <ul class="carousel-indicators">
        @for (var coutslide = 0; coutslide < Model.Count; coutslide++)
        {
            if (coutslide == 0)
            {
                <li data-target="#slider" data-slide-to="0" class="active"></li>
            }
            else
            {
                <li data-target="#slider" data-slide-to="@coutslide"></li>
            }
        }
    </ul>

    @*The slideshow*@
    <div class="carousel-inner">
        @for (var coutslide = 0; coutslide < Model.Count; coutslide++)
        {
            if (coutslide == 0)
            {
                <div class="carousel-item active">
                    <a href="#">
                        <img src="@Model[coutslide].Image" class="img-slider" alt="Ảnh quảng cáo">
                    </a>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <a href="#">
                        <img src="@Model[coutslide].Image" class="img-slider" alt="Ảnh quảng cáo">
                    </a>
                </div>
            }
        }
    </div>
</div>