@{
    ViewData["Title"] = "Đăng Nhập tài khoản";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                            <div class="card-body">
                                <form asp-action="Login" asp-controller="User" method="post" id="login">
                                    <h1 class="text-danger bg-warning">@Html.Raw(TempData["Message"])</h1>
                                    <div asp-validation-summary="All" class="text-danger"></div>

                                    <div class="form-group">
                                        <label class="small mb-1">Tài khoản</label>
                                        <input class="form-control py-4" name="UserName" type="text" placeholder="Nhập tài khoản" id="username-login" />
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1">Mật khẩu</label>
                                        <input class="form-control py-4" name="Password" type="password" placeholder="Enter password" id="password-login" />
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" name="RememberMe" type="checkbox" />
                                            <label class="custom-control-label">Nhớ mật khẩu</label>
                                        </div>
                                    </div>
                                    <div class="auth-form__controls">
                                        <button type="submit" class="btn btn--primary btn-submit-login pr-2 pl-2">ĐĂNG NHẬP</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <div class="small">Nếu chưa có tài khoản? <a href="/User/Register">Đăng ký</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>