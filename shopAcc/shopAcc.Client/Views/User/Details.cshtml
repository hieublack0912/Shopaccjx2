@model shopAcc.ViewModels.System.Users.UserVm

@{ ViewData["Title"] = "Chi tiết";
    Layout = "~/Views/Shared/_Layout2.cshtml"; }

<div class="container-fluid">
    <ul class="breadcrumb mt-3">
        <li><a href="/"><localize>Home</localize></a> <span class="divider"> / </span></li>
        <li class="active ml-1">Thông tin tài khoản</li>
    </ul>
    <h1 class="text-light bg-success pl-2">@Html.Raw(TempData["Message"])</h1>
    <div class="card mb-4">
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        Họ Tên
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FirstName)
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                    <dt class="col-sm-2">
                        Số điện thoại
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        Tên đăng nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt class="col-sm-2">
                        Địa chỉ Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Ngày sinh
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dob)
                    </dd>
                </dl>
                <a href="~/User/Edit" class="btn btn-info mr-3">Thay đổi thông tin</a>
                <a href="~/User/changepass" class="btn btn--primary">Đổi mật khẩu</a>
            </div>
        </div>
    </div>
</div>